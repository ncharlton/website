{% extends 'admin/admin_base.html.twig' %}

{% block title %}Delete - {{ playlist.title }}{% endblock %}

{% block pageheader %}Delete playlist{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="title"><strong class="d-block">Delete {{ playlist.title }}</strong></div>
                <div class="block-body">
                    <p>Are you sure you want to delete {{ playlist.title }}?</p>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button class="btn btn-primary" type="submit">Delete</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}