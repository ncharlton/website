{% extends 'admin/admin_base.html.twig' %}

{% block title %}Edit video - {{ video.title }}{% endblock %}

{% block pageheader %}Edit video{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="title"><strong class="d-block">Edit {{ video.title }}</strong></div>
                <div class="block-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button class="btn btn-primary" type="submit">Edit</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}