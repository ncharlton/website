<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="app">
            {% include 'component/_header.html.twig' %}

            <main class="main">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            {% block body %}{% endblock %}
                        </div>
                        <div class="col-lg-4">
                            <div class="box">
                                <div class="box-inner">
                                    <streamer-status></streamer-status>
                                </div>
                            </div>

                            {% block sidebar %}{% endblock %}
                        </div>
                    </div>
                </div>

            </main>
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
